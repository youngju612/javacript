    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script>
        $(document).ready(function(){
            $('h1').css('color', 'green');
            $('h1').css('background', 'lightcoral');

        }
        );
    </script>
</head>
